<%- include ('partials/head.ejs')%>

<%- include ('partials/navigation.ejs')%>

<div class="container p-4">
  <div class="row">
    <div class="col-md-4">
      <form method="POST" action="/edit/<%= task._id %>" class="card card-body">
        <div class="form-group">
          <label for=" title">Title</label>
          <input type="text" class="form-control" name="title" id="title" value="<%= task.title %>" aria-describedby="title" autofocus required>
        </div>
        <div class="form-group">
          <label for=" decsription">Description</label>
          <textarea name="description" id="description" class="form-control" required><%= task.description %></textarea>
        </div>
        <div class="form-group">
          <label for=" status">Status</label>
          <textarea name="status" id="status" class="form-control" required><%= task.status %></textarea>
        </div>
        <input type="submit" class="btb btn-warning" value="Update Product">
      </form>
    </div>
  </div>
</div>


<%- include ('partials/footer.ejs')%>